---
import Linkedin from "../icons/linkedin.astro";
import Whatsapp from "../icons/whatsapp.astro";
---

<footer class="p-6 text-brownDark bg-gray-50">
  <div class="mb-6">
    <a href="/">
      <img src="/img/logo2.png" alt="" class="w-full h-auto m-auto" />
    </a>
  </div>
  <div class="wrapper-socialmedia gap-2">
    <a
      href="https://wa.me/680260412"
      class="font-bold flex"
      target="_blank"
      rel="noopener noreferrer"
    >
      <span class="mr-2"> <Whatsapp width="40" /> </span>
    </a>
    <a
      href="https://www.linkedin.com/in/cristinan%C3%BA%C3%B1ezparra/"
      target="_blank"
      rel="noopener noreferrer"
    >
      <span> <Linkedin width="40" /></span></a
    >
  </div>

  <div class="wrapper-contact text-center font-bold">
    <a href="/contacto">CONTACTO</a>
  </div>

  <div
    class="flex flex-col md:flex-row-reverse justify-between my-8 wrapper-links"
  >
    <ul class="md:flex text-center gap-4 [&>li]:mb-2 [&>li]:md:mb-0">
      <li><a href="/politica-de-privacidad">Política de privacidad</a></li>
      <li><a href="/aviso-legal">Aviso legal</a></li>
    </ul>
    <span class="text-center mt-6 md:mt-0"> © 2024 Cristina Nuñez Parra </span>
  </div>

  <div class="text-right mt-8">
    <span class="text-sm">
      Web desarrollada por <a
        href="https://www.linkedin.com/in/juanlumoreno/"
        target="_blank"
        class="underline text-blue-700"
        rel="noopener noreferrer"
      >
        Juan Luis Moreno Calderón
      </a></span
    >
  </div>
</footer>

<style>
  footer {
    img {
      max-width: 250px;
    }

    @media screen and (min-width: 1024px) {
      img {
        max-width: 350px;
      }
    }
  }
  .wrapper-socialmedia {
    display: flex;
    justify-content: center;

    svg {
      margin: 7px;
    }
  }
</style>
