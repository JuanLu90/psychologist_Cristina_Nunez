---
import LinkedinIcon from "../icons/linkedin.astro";
import WhatsappIcon from "../icons/whatsapp.astro";

import { colors } from "../util";
const { primary } = colors;
---

<footer class="p-6">
  <div class="wrapper-socialmedia gap-2">
    <WhatsappIcon />
    <LinkedinIcon />
  </div>

  <hr />

  <div class="wrapper-contact">
    <a href="/contact">CONTACTO</a>
  </div>

  <hr />

  <div class="flex flex-col md:flex-row-reverse justify-between my-8">
    <ul class="md:flex text-center gap-4 [&>li]:mb-2 [&>li]:md:mb-0">
      <li><a href="/politica-de-privacidad">Política de privacidad</a></li>
      <li><a href="/aviso-legal">Aviso legal</a></li>
      <li><a href="/politica-de-cookies">Política de cookies</a></li>
    </ul>
    <span class="text-center mt-6 md:mt-0"> © 2024 Cristina Nuñez Parra </span>
  </div>

  <hr />

  <div class="text-right">
    <span class="text-sm">
      Web desarrollada por <a
        href="https://www.linkedin.com/in/juanlumoreno/"
        target="_blank"
        class="underline text-blue-700"
        rel="noopener noreferrer"
      >
        Juan Luis Moreno Calderón
      </a></span
    >
  </div>
</footer>

<style define:vars={{ primary }}>
  footer {
    background-color: var(--primary);
  }
  .wrapper-socialmedia {
    display: flex;
    justify-content: center;

    svg {
      margin: 7px;
    }
  }

  .wrapper-contact {
    margin: 7px;
    text-align: center;

    a {
      margin: 7px;
      display: block;
      font-weight: bold;
    }
  }
</style>
