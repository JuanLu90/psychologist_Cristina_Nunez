---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.astro";

import Phone from "../icons/phone2.astro";
import Mail from "../icons/mail2.astro";
import Whatsapp from "../icons/whatsapp2.astro";
---

<Layout title="Contacto">
  <div>
    <h2 class="text-6xl text-center p-12 font-dancing">Contacto</h2>
    <div
      class="flex justify-center flex-col md:flex-row md:justify-around text-center [&>div]:flex [&>div]:flex-col [&>div>a]:mx-auto [&>div>a]:mb-4 gap-12 p-6"
    >
      <div>
        <a
          href="https://wa.me/680260412"
          class="font-bold flex flex-col items-center hover:text-blueMedium"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Whatsapp width="70" />

          <span>Envíame un mensaje</span>
        </a>
      </div>
      <div>
        <a
          href="tel:+34680260412"
          class="font-bold flex flex-col items-center hover:text-blueMedium"
        >
          <Phone width="70" />

          <span>Llámame</span>
        </a>
      </div>
      <div>
        <a
          href="mailto:nparracristina@gmail.com"
          class="font-bold flex flex-col items-center hover:text-blueMedium"
        >
          <Mail width="70" />

          <span>Envíame un correo</span>
        </a>
      </div>
    </div>
    <div class="px-6 bg-brownLight">
      <ContactForm />
    </div>
  </div>
</Layout>
